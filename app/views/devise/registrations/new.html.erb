<div id="devise">
  <h3 class="dashboard-title">Sign up</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: "Enter Username" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: "Enter email" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: "Enter password" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Enter password confirmation" %>

      <%= f.submit "Sign up", class: 'item-more' %>

      <%= render "devise/shared/links" %>
  <% end %>
</div>
