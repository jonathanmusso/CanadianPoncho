<h1>Vehicles#index</h1>
<p>Find me in app/views/vehicles/index.html.erb</p>

<% if policy(Vehicle.new).create? %>
  <%= link_to "Add Vehicle to Registry", new_vehicle_path, class: 'btn btn-success' %>
<% end %>

<hr />
<% @vehicles.each do |vehicle| %>
  <p><%= link_to vehicle.model, vehicle %></p>

  <small>
   submitted <%= time_ago_in_words(vehicle.created_at) %> ago by <%= vehicle.user.name %>
  </small>
<% end %>